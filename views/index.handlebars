<body class="background">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 style="text-align: center;">EAT THE KRABBY PATTY</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <img src="assets/images/krabby.gif" alt="krabby" class="center">
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <h1 "notdevouredBurgerH1">Devour the Burger</h1>
        <ul id="toDevour">

          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <button class="devour" data-id="{{id}}" data-newdevour="{{devour}}">
              Devour
            </button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-lg-6">
        <h1 id="devouredBurgerH1">Devoured Burgers</h1>
        <ul id="devouredBurgers">
          <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </ul>
      </div>
    </div>
    <div class="row">

      <div class="col-md-12" style="text-align: center;">

        <form class="create-form">
          <div class="form-group">
            <input type="text" id="burgerType" name="name" placeholder="enter burger"><br>
          </div>
          <p>Enter an item from the Gallery Grub you want to eat and Click the Submit button</p>
          <button type="submit" class="btn btn-primary" id="submitBurger">submit</button>
          <p>
            <img src="assets/images/KrustyKrabMenu.png" alt="krabby" class="center menu">
          </p>
        </form>
      </div>
    </div>
</body>

